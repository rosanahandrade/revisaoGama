
public class Metodos {
	
	
	public static void soma(int num1, int num2) {
		
		System.out.println("A soma dos números "+num1+" + "+num2+" = "+(num1+num2));
		System.out.println("  ");
		 
	}
	
	public static void subtracao(int num1, int num2) {
		
		System.out.println("A subtração dos números "+num1+" - "+num2+" = "+(num1-num2));
		System.out.println("  ");
		 
	}
	
	public static void multiplicacao(int num1, int num2) {
		
		System.out.println("A multiplicação dos números "+num1+" x "+num2+" = "+(num1*num2));
		System.out.println("  ");
		 
	}
	
	public static void divisao(int num1, int num2) {
		
		System.out.println("A divisão dos números "+num1+" / "+num2+" = "+(num1/num2));
		System.out.println("  ");
		 
	}

}
